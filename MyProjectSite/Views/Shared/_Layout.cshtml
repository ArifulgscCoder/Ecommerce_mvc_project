<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Responsive Admin & Dashboard Template based on Bootstrap 5">
    <meta name="author" content="AdminKit">
    <meta name="keywords" content="adminkit, bootstrap, bootstrap 5, admin, dashboard, template, responsive, css, sass, html, theme, front-end, ui kit, web">
    <title>@ViewBag.Title - MVC E-commerce Project</title>
    <link href="~/content/frontend/css/Admincss.css" rel="stylesheet" />
    @RenderSection("Head", false)
</head>

<body>
    <div class="wrapper">
        <!-- Sidebar Navigation Start -->
        <nav id="sidebar" class="sidebar js-sidebar">
            <div class="sidebar-content js-simplebar">
                <a class="sidebar-brand" href="@Url.Action("Index", "Dashboard")">
                    <span class="align-middle">Mingle Limited Admin</span>
                </a>

                <ul class="sidebar-nav">
                    <li class="sidebar-item active">
                        <a class="sidebar-link" href="@Url.Action("Index", "Dashboard")">
                            <i class="fas fa-tachometer-alt"></i><span class="align-middle">Dashboard</span>
                        </a>
                    </li>
                    <li class="sidebar-item">
                        <a class="sidebar-link" href="@Url.Action("Index", "Order")">
                            <i class="fas fa-shopping-cart"></i><span class="align-middle">Order</span>
                        </a>
                    </li>
                    <li class="sidebar-item">
                        <a class="sidebar-link" href="@Url.Action("Index", "Product")">
                            <i class="fas fa-box"></i><span class="align-middle">Product</span>
                        </a>
                    </li>
                    <li class="sidebar-item">
                        <a class="sidebar-link" href="@Url.Action("Index", "Customer")">
                            <i class="fas fa-user"></i><span class="align-middle">Customer</span>
                        </a>
                    </li>
                    <li class="sidebar-item">
                        <a class="sidebar-link" href="@Url.Action("Index", "Employee")">
                            <i class="fas fa-user-tie"></i><span class="align-middle">Employee</span>
                        </a>
                    </li>
                    <li class="sidebar-item">
                        <a class="sidebar-link" href="@Url.Action("Create", "Category")">
                            <i class="fas fa-tags"></i><span class="align-middle">Add Category</span>
                        </a>
                    </li>
                    <li class="sidebar-item">
                        <a class="sidebar-link" href="@Url.Action("Create", "SubCategory")">
                            <i class="fas fa-stream"></i><span class="align-middle">Add SubCategory</span>
                        </a>
                    </li>

                

                    <li class="sidebar-item">
                        <a class="sidebar-link" href="@Url.Action("Logout", "AdminLogin")">
                            <i class="fas fa-sign-out-alt"></i><span class="align-middle">LogOut</span>
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
        <!-- Sidebar Navigation End -->

        <div class="main">
            <nav class="navbar navbar-expand navbar-light navbar-bg">
                <a class="sidebar-toggle js-sidebar-toggle">
                    <i class="hamburger align-self-center"></i>
                </a>
                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav navbar-align">
                        <!-- Top Navigation Start -->
                        <li class="nav-item dropdown">
                            <a class="nav-link d-inline-block d-sm-none" href="#">
                                <i class="fas fa-handshake"></i>&nbsp;<span>Hello!&nbsp;@Session["username"]</span>
                            </a>
                            <a class="nav-link d-none d-sm-inline-block" href="#" data-bs-toggle="dropdown">
                                <i class="fas fa-handshake"></i>&nbsp;<span>Hello!&nbsp;@Session["username"]</span>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link d-none d-sm-inline-block" href="@Url.Action("Logout", "AdminLogin")">
                                <i class="fas fa-sign-out-alt"></i>&nbsp;<span>Logout</span>
                            </a>
                        </li>
                        <!-- Top Navigation End -->
                    </ul>
                </div>
            </nav>

            <!-- Content Area Start -->
            <main class="content">
                <div class="container-fluid p-0">
                    @RenderBody()
                </div>
            </main>
            <!-- Content Area End -->
            <!-- Footer Section Start -->
            <footer class="footer">
                <div class="container-fluid">
                    <div class="row text-muted">
                        <div class="col-6 text-start">
                            <p class="mb-0">
                                <a class="text-muted" href="@Url.Action("Index", "Dashboard")">
                                    &copy; @DateTime.Now.Year<strong>&nbsp;MingleBD Limited</strong>
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            </footer>
            <!-- Footer Section End -->
        </div>
    </div>

    @RenderSection("scripts", false)
    <script src="~/Content/JS/bootstrap.js"></script>
    <script src="~/Content/JS/app.js"></script>
</body>
</html>
