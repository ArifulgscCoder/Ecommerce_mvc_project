<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <link rel="icon" href="img/favicon.png" type="image/png" />
    <title>MingleBD Eshop</title>
    <!-- Bootstrap CSS -->
    <link href="~/content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/content/frontend/vendors/linericon/style.css" rel="stylesheet" />
    <link href="~/content/frontend/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/content/frontend/css/themify-icons.css" rel="stylesheet" />
    <link href="~/content/frontend/css/flaticon.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/content/frontend/vendors/owl-carousel/owl.carousel.min.css" />
    <link rel="stylesheet" href="~/content/frontend/vendors/lightbox/simpleLightbox.css" />
    <link rel="stylesheet" href="~/content/frontend/vendors/nice-select/css/nice-select.css" />
    <link rel="stylesheet" href="~/content/frontend/vendors/animate-css/animate.css" />
    <link rel="stylesheet" href="~/content/frontend/vendors/jquery-ui/jquery-ui.css" />
    <!-- main css -->
    <link rel="stylesheet" href="~/content/frontend/css/style.css" />
    <link rel="stylesheet" href="~/content/frontend/css/responsive.css" />
</head>

<body>
    <!--================Header Menu Area =================-->
    <header class="header_area">
        <div class="top_menu">
            <div class="container">
                <div class="row">
                    <div class="col-lg-7">
                        <div class="float-left">
                            <p>Phone: ++8801505050505</p>
                            <p>email: info@MingleBD.com</p>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <div class="main_menu">
            <div class="container">
                <nav class="navbar navbar-expand-lg navbar-light w-100">
                    <!-- Brand and toggle get grouped for better mobile display -->
                    <a class="navbar-brand logo_h" href="@Url.Action("Index","Home")">

                        <img src="~/content/frontend/img/mingle-logo.png" alt="Logo" />
                    </a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse offset w-100" id="navbarSupportedContent">
                        <div class="row w-100 mr-0">
                            <div class="col-md-6 pr-0">
                                <ul class="nav navbar-nav center_nav pull-right">
                                    <li class="nav-item active">
                                        <a class="nav-link" href="@Url.Action("Index","Home")">Home</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="@Url.Action("ViewAllProducts","Home")">Products</a>
                                    </li>

                                </ul>
                            </div>

                            <div class="col-md-6 pr-0">
                                <div class="row">
                                    <div class="col-md-6">
                                        <form method="get" action="@Url.Action("Search","ProductInfo")" class="mt-4">
                                            <input type="text" id="searchTxtBox" placeholder="Search product here . . ." />
                                        </form>
                                    </div>



                                    <div class="col-md-6">
                                        <ul class="nav navbar-nav navbar-right right_nav pull-right">
                                            <li class="nav-item submenu dropdown">
                                                <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                                    <i class="ti-user" aria-hidden="true"></i>
                                                </a>
                                                <ul class="dropdown-menu">
                                                    <li class="nav-item">
                                                        <a class="nav-link" href="@(Session["username"] != null ? Url.Action("Index", "Account") : Url.Action("Login", "Account"))">My Account</a>
                                                    </li>

                                                    <li class="nav-item">
                                                        <a class="nav-link" href="@Url.Action("Create", "Customer")">Register</a>
                                                    </li>
                                                    <li class="nav-item">
                                                        <a class="nav-link" href="@(Session["username"] != null ? Url.Action("Index", "CheckOut") : Url.Action("Login", "Account"))">Checkout</a>
                                                    </li>
                                                    @if (Session["username"] == null)
                                                    {
                                                        <li>@Html.ActionLink("Login", "Login", "Account")</li>
                                                    }
                                                    else
                                                    {
                                                        <li><a href="@Url.Action("Logout","Account")">Logout</a></li>
                                                        <li><a href="">@Session["username"]</a></li>
                                                    }

                                                </ul>
                                            </li>
                                            <li class="nav-item">
                                                <a href="@(Session["username"] != null ? Url.Action("Index", "WishList") : Url.Action("Login", "Account"))" class="icons">
                                                    @if (ViewBag.WlItemsNo > 0)
                                                    {
                                                        <text>(@ViewBag.WlItemsNo)</text>
                                                    }
                                                    <i class="ti-heart" aria-hidden="true"></i>
                                                </a>
                                            </li>
                                            <li class="nav-item">
                                                <a href="@(Session["username"] != null ? Url.Action("Index", "MyCart") : Url.Action("Login", "Account"))" class="icons">
                                                    <i class="ti-shopping-cart"></i>
                                                </a>
                                            </li>
                                        </ul>
                                    </div>


                                </div>
                            </div>
                        </div>
                        </div>
                </nav>
            </div>
        </div>
    </header>
    <!--================Header Menu Area =================-->
    <main>
        @RenderBody()
    </main>
    <!--================ start footer Area  =================-->
    <footer class="footer-area section_gap">
        <div class="container">
            <div class="row">
                <div class="col-lg-2 col-md-6 single-footer-widget">
                    <h4>Top Products</h4>
                    <ul>
                        <li><a href="#">Managed Website</a></li>
                        <li><a href="#">Manage Reputation</a></li>
  
                    </ul>
                </div>
                <div class="col-lg-2 col-md-6 single-footer-widget">
                    <h4>Quick Links</h4>
                    <ul>
                       
                        <li><a href="#">Investor Relations</a></li>
                        <li><a href="#">Terms of Service</a></li>
                    </ul>
                </div>
                <div class="col-lg-2 col-md-6 single-footer-widget">
                    <h4>Features</h4>
                    <ul>
                        
                        <li><a href="#">Investor Relations</a></li>
                        <li><a href="#">Terms of Service</a></li>
                    </ul>
                </div>
                <div class="col-lg-2 col-md-6 single-footer-widget">
                    <h4>Resources</h4>
                    <ul>
                       
                        <li><a href="#">Research</a></li>
                        <li><a href="#">Experts</a></li>
                        
                    </ul>
                </div>
                <div class="col-lg-4 col-md-6 single-footer-widget">
                    <h4>Newsletter</h4>
                    <p>You can trust us. we only send promo offers,</p>
                    <div class="form-wrap" id="mc_embed_signup">
                        <form target="_blank" action="https://spondonit.us12.list-manage.com/subscribe/post?u=1462626880ade1ac87bd9c93a&amp;id=92a4423d01"
                              method="get" class="form-inline">
                            <input class="form-control" name="EMAIL" placeholder="Your Email Address" onfocus="this.placeholder = ''"
                                   onblur="this.placeholder = 'Your Email Address '" required="" type="email">
                            <button class="click-btn btn btn-default">Subscribe</button>
                            <div style="position: absolute; left: -5000px;">
                                <input name="b_36c4fd991d266f23781ded980_aefe40901a" tabindex="-1" value="" type="text">
                            </div>

                            <div class="info"></div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="footer-bottom row align-items-center">
                <p class="footer-text m-0 col-lg-8 col-md-12">
                    
                    Copyright &copy;
                    <script>document.write(new Date().getFullYear());</script> All rights reserved | MingleBD EShop Limited<i class="fa fa-heart-o" aria-hidden="true"></i>
                 
                </p>
                <div class="col-lg-4 col-md-12 footer-social">
                    <a href="#"><i class="fa fa-facebook"></i></a>
                    <a href="#"><i class="fa fa-twitter"></i></a>
                    <a href="#"><i class="fa fa-dribbble"></i></a>
                    <a href="#"><i class="fa fa-behance"></i></a>
                </div>
            </div>
        </div>
    </footer>
    <!--================ End footer Area  =================-->
    <script type="text/javascript">
      $(function () {
          $("#searchTxtBox").autocomplete({
              source: '@Url.Action("GetProducts","ProductInfo")'
          });
      });
    </script>

    <script src="~/Scripts/jquery-3.7.1.min.js"></script>
    <script src="~/content/frontend/js/popper.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/content/frontend/js/stellar.js"></script>
    <script src="~/content/frontend/vendors/lightbox/simpleLightbox.min.js"></script>
    <script src="~/content/frontend/vendors/nice-select/js/jquery.nice-select.min.js"></script>
    <script src="~/content/frontend/vendors/isotope/imagesloaded.pkgd.min.js"></script>
    <script src="~/content/frontend/vendors/isotope/isotope-min.js"></script>
    <script src="~/content/frontend/vendors/owl-carousel/owl.carousel.min.js"></script>
    <script src="~/content/frontend/js/jquery.ajaxchimp.min.js"></script>
    <script src="~/content/frontend/vendors/counter-up/jquery.waypoints.min.js"></script>
    <script src="~/content/frontend/vendors/counter-up/jquery.counterup.js"></script>
    <script src="~/content/frontend/js/mail-script.js"></script>
    <script src="~/content/frontend/js/theme.js"></script>
</body>

</html>