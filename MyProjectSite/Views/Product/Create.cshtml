@model MyProjectSite.Models.ProductViewModel
@{
    ViewBag.Title = "Add New Product";
}
<link href="~/content/bootstrap.min.css" rel="stylesheet" />
<style>
        /* Global Styles */
    /* General styles */
    body {
        font-family: 'Roboto', sans-serif;
        background-color: #f8f9fa;
        font-size: 16px;
    }

    /* Form container styles */
    .container {
        max-width: 800px;
        height:auto;
        margin: auto;
        padding: 20px;
        background-color: #ffffff;
        border: 1px solid #dee2e6;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        border-radius: 5px;
    }

    /* Form field styles */
    .form-label {
        font-size: 18px;
        font-weight: bold;
        color: #2c3e50;
    }

    .form-control {
        font-size: 16px;
        padding: 10px;
        border: 1px solid #ced4da;
        border-radius: 5px;
        margin-bottom: 10px;
    }

    .form-control:focus {
        border-color: #2980b9;
        box-shadow: 0 0 5px rgba(41, 128, 185, 0.5);
    }

    .text-danger {
        color: #dc3545;
        font-size: 14px;
    }

    .btn {
        font-size: 16px;
        padding: 10px 20px;
    }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
    }

    .btn-success:hover {
        background-color: #218838;
        border-color: #1e7e34;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

    .btn-danger:hover {
        background-color: #c82333;
        border-color: #bd2130;
    }

    </style>
<div class="container">
    <div class="row">
        <div class="col">
            <h2 class="text-info">Add New Product</h2>
            <hr />
            <div class="col-md-12">
                @using (Ajax.BeginForm(new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "msg", OnComplete = "clearAll" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="row mb-2">
                        <div id="msg">

                        </div>
                    </div>
                    <div class="row g-3">
                        <div class="col-md-12">
                            @Html.LabelFor(x => x.Name, new { @class = "form-label fs-4" })
                            @Html.TextBoxFor(x => x.Name, new { @class = "form-control fs-4" })
                            @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger" })
                        </div>

                        <div class="col-md-6">
                            @Html.LabelFor(x => x.CategoryID, new { @class = "form-label fs-4" })
                            @Html.DropDownListFor(x => x.CategoryID, ViewBag.categoryList as SelectList, "***Select Category***", new { @class = "form-select fs-4" })
                            @Html.ValidationMessageFor(x => x.CategoryID, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-6">
                            @Html.LabelFor(x => x.SubCategoryID, new { @class = "form-label fs-4" })
                            @Html.DropDownListFor(x => x.SubCategoryID, ViewBag.SubCategoryList as SelectList, "***Select SubCategory***", new { @class = "form-select fs-4" })
                            @Html.ValidationMessageFor(x => x.SubCategoryID, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-6">
                            @Html.LabelFor(x => x.UnitPrice, new { @class = "form-label fs-4" })
                            @Html.TextBoxFor(x => x.UnitPrice, new { @class = "form-control fs-4", Type = "number" })
                            @Html.ValidationMessageFor(x => x.UnitPrice, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-6">
                            @Html.LabelFor(x => x.OldPrice, new { @class = "form-label fs-4" })
                            @Html.TextBoxFor(x => x.OldPrice, new { @class = "form-control fs-4", Type = "number" })
                            @Html.ValidationMessageFor(x => x.OldPrice, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-6">
                            @Html.LabelFor(x => x.ShortDescription, new { @class = "form-label fs-4" })
                            @Html.TextAreaFor(x => x.ShortDescription, new { @class = "form-control fs-4", rows = "3" })
                            @Html.ValidationMessageFor(x => x.ShortDescription, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-6">
                            @Html.LabelFor(x => x.UnitInStock, new { @class = "form-label fs-4" })
                            @Html.TextBoxFor(x => x.UnitInStock, new { @class = "form-control fs-4", Type = "number" })
                            @Html.ValidationMessageFor(x => x.UnitInStock, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-6">
                            @Html.LabelFor(x => x.Picture, new { @class = "form-label fs-4" })
                            @Html.TextBoxFor(x => x.Picture, new { @class = "form-control fs-4", Type = "file" })
                            @Html.ValidationMessageFor(x => x.Picture, "", new { @class = "text-danger" })
                        </div>

                        <div class="col-md-6 mt-4">
                            <button type="submit" class="btn btn-success btn-lg col-12 mt-4"><i class="far fa-save fs-4"></i> Add Product</button>
                        </div>
                    </div>
                }

                <div class="col-md-12 mt-3">
                    <a href="@Url.Action("Index", "Product")" class="btn btn-danger btn-sm fs-4"><i class="far fa-arrow-alt-circle-right"></i> Back to the list</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Content/JS/jquery-3.6.0.js"></script>
    <script src="~/Content/JS/jquery.validate.js"></script>
    <script src="~/Content/JS/jquery.validate.unobtrusive.js"></script>
    <script src="~/Content/JS/jquery.unobtrusive-ajax.js"></script>
    <script>
    $("#form0").attr("enctype", "multipart/form-data")

        function clearAll() {
            $("#form0").trigger("reset");
        }</script>

}

