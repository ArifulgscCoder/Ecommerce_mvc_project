@model IEnumerable<MyProjectSite.Models.Product>
@{
    ViewBag.Title = "Product Information";
}
<link href="~/content/bootstrap.min.css" rel="stylesheet" />

<div class="row">
    <div class="col">
        <h2 class="text-info">Product List</h2>
        <hr />
        <div class="d-flex justify-content-end mb-2">
    <a href="@Url.Action("Create", "Product")" class="btn btn-outline-primary btn-sm">
        <i class="fa-regular fa-square-plus me-2 fs-5"></i> Create Product
    </a>
</div>

        <div class="table-responsive">
            <table class="table table-condensed table-hover table-bordered table-striped table">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(p => p.Name)</th>
                       
                        <th>@Html.DisplayNameFor(p => p.CategoryID)</th>
                      
                        <th>@Html.DisplayNameFor(p => p.UnitPrice)</th>
                        <th>@Html.DisplayNameFor(p => p.UnitInStock)</th>
                        <th>@Html.DisplayNameFor(p => p.PicturePath)</th>
                        
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var pdt in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(p => pdt.Name)</td>
                           
                            <td>@Html.DisplayFor(p => pdt.CategoryID)</td>
                       
                            <td>@Html.DisplayFor(p => pdt.UnitPrice)</td>
                            <td>@Html.DisplayFor(p => pdt.UnitInStock)</td>
                            <td>
                                <img src="@Url.Content(pdt.PicturePath)" width="60" height="60" class="rounded" />

                            </td>
                            <td>
                                <a href="@Url.Action("Edit", "Product", new {id = pdt.ProductID })" class="btn btn-outline-warning btn-sm"><i class="fa-solid fa-pen-to-square fs-4"></i>Edit</a>
                                <a href="@Url.Action("Details", "Product", new {id = pdt.ProductID })" class="btn btn-outline-info btn-sm"><i class="fa-regular fa-circle-info fs-4"></i>Details</a>
                                <a href="@Url.Action("Delete", "Product", new {id = pdt.ProductID })" class="btn btn-outline-danger btn-sm"><i class="fa-regular fa-trash-arrow-up fs-4"></i>Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

