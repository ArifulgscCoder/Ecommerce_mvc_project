
@model MyProjectSite.Models.ProductViewModel
@{
    ViewBag.Title = "Product Details";
}
<link href="~/content/bootstrap.min.css" rel="stylesheet" />
<style>
    /* Global Styles */
body {
    font-family: Arial, sans-serif;
    background-color: #f8f9fa; /* Light gray background */
}

.container {
    max-width: 960px;
    margin: 20px auto;
    padding: 20px;
    background-color: #fff;
    border: 1px solid #ddd; /* Light gray border */
    border-radius: 5px;
    box-shadow: 0 0 10px rgba(0,0,0,0.1); /* Soft shadow effect */
}

/* Section Styles */
.about-section {
    padding: 60px 0;
}

.about-text {
    margin-bottom: 30px;
}

.about-avatar img {
    border-radius: 5px;
    max-width: 100%;
}

.theme-color {
    color: #007bff; /* Bootstrap primary color */
}

.dark-color {
    color: #343a40; /* Dark color for headings */
}

.fs-2 {
    font-size: 2rem;
}

.fs-4 {
    font-size: 1rem;
}

/* Button Styles */
.btn-danger {
    font-size: 1rem;
    padding: 0.75rem 1.5rem;
    border-radius: 5px;
    transition: background-color 0.15s ease-in-out, border-color 0.15s ease-in-out, color 0.15s ease-in-out;
    background-color: #dc3545; /* Danger button color */
    border-color: #dc3545;
}

.btn-danger:hover {
    background-color: #c82333; /* Darker danger button color on hover */
    border-color: #bd2130;
}



</style>
<section class="section about-section gray-bg" id="about">
    <div class="container">
        <div class="row align-items-center flex-row-reverse">
            <div class="col-lg-8">
                <div class="about-text go-to">
                    <h2 class="dark-color">Individual Product Details</h2>
                    <hr />
                    <h3 class="theme-color lead fs-2">@Model.Name</h3>
                    <div class="col-md-12">
                        <label class="fs-4">Product Description</label>
                        <p style="text-align:justify;">@Model.ShortDescription</p>
                    </div>
                    <div class="row about-list">
                        <div class="col-md-6">
                            <div class="media">
                                <label class="fs-4">Unit Price</label>
                                <p>@Model.UnitPrice</p>
                            </div>
                            <div class="media">
                                <label class="fs-4">Privious Price</label>
                                <p>@Model.OldPrice</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="media">
                                <label class="fs-4">Category</label>
                                <p>@Html.DropDownListFor(x => x.CategoryID, ViewBag.categoryList as SelectList, new { @class = "form-control form-control-plaintext" })</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="media">
                                <label class="fs-4">SubCategory</label>
                                <p>@Html.DropDownListFor(x => x.SubCategoryID, ViewBag.SubCategoryList as SelectList, new { @class = "form-control form-control-plaintext" })</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="media">
                                <label class="fs-4">Current Stock</label>
                                <p>@Model.UnitInStock</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 @*d-flex justify-content-end*@">
                <div class="about-avatar">
                    <img src="@Url.Content(Model.PicturePath)" title="No Image" alt="" width="250" height="250">
                </div>
            </div>
        </div>
        <div class="counter mt-4">
            <div class="row">
                <div class="col-6 col-lg-3">
                    <a href="@Url.Action("Index", "Product")" class="btn btn-danger btn-sm fs-4"><i class="fa-regular fa-hand-back-point-left"></i> Back to the list</a>
                </div>
            </div>
        </div>
    </div>
</section>

