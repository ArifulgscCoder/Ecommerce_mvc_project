@model List <MyProjectSite.Models.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

   
<body>
    <div class="container mt-4">
        @foreach (var customer in Model)
        {
            <div class="card mb-4">
                <div class="card-header">
                    <h2 class="card-title">My Profile</h2>
                </div>
                <div class="card-body">
                    <p class="card-text"><strong>Name:</strong> @customer.First_Name @customer.Last_Name</p>
                    <p class="card-text"><strong>Username:</strong> @customer.UserName</p>
                    <p class="card-text"><strong>Password:</strong> @customer.Password</p>
                    <p class="card-text"><strong>Gender:</strong> @customer.Gender</p>
                    <p class="card-text"><strong>Date of Birth:</strong> @customer.DateofBirth</p>
                    <p class="card-text"><strong>Country:</strong> @customer.Country</p>
                    <p class="card-text"><strong>City:</strong> @customer.City</p>
                    <p class="card-text"><strong>Email:</strong> @customer.Email</p>
                    <p class="card-text"><strong>Phone:</strong> @customer.Phone</p>
                    <p class="card-text"><strong>Address:</strong> @customer.Address</p>


                  
                    <div class="mt-3">
                        @Html.ActionLink("Edit My Profile", "Edit", "Account", new { id = customer.CustomerID }, new { @class = "btn btn-primary me-2" })
          
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Bootstrap JavaScript and dependencies (optional) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-+5FgezrW/ERh4JL3Fm2pR2bViwTmD2RrYpnbOwDM0IhaxvFbjsAkxEl7+6qumq4Q" crossorigin="anonymous"></script>
</body>