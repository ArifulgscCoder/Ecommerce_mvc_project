@model IEnumerable<MyProjectSite.Models.Order>

@{
    ViewBag.Title = "Order";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/content/bootstrap.min.css" rel="stylesheet" />
<style>
    /* Global Styles */
body {
    font-family: Arial, sans-serif;
    background-color: #f8f9fa; /* Light gray background */
}

.container {
    max-width: 960px;
    margin: 20px auto;
    padding: 20px;
    background-color: #fff;
    border: 1px solid #ddd; /* Light gray border */
    border-radius: 5px;
    box-shadow: 0 0 10px rgba(0,0,0,0.1); /* Soft shadow effect */
}

/* Table Styles */
.table {
    width: 100%;
    border-collapse: collapse;
    background-color: #fff;
}

.table th,
.table td {
    border: 1px solid #ddd; /* Light gray border */
    padding: 8px;
    text-align: center;
}

.table th {
    background-color: #f2f2f2; /* Light gray background for table header */
}

.table-hover tbody tr:hover {
    background-color: #f5f5f5; /* Light gray background on hover */
}

.btn-info {
    background-color: #5bc0de; /* Bootstrap info button color */
    color: #fff;
    border: none;
    padding: 5px 10px;
    text-decoration: none;
}

.btn-info:hover {
    background-color: #46b8da; /* Darker blue on hover */
}



</style>
<div class="row">
    <div class="col-md-12">

        <table class="table table-bordered table-hover table-striped">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.OrderID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Customer.CustomerID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Payment.PaymentID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ShippingAddress.ShippingID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Discount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Taxes)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TotalAmount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OrderDate)
                </th>

                <th>Action</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.OrderID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Customer.CustomerID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Payment.PaymentID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ShippingAddress.ShippingID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Discount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Taxes)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TotalAmount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OrderDate)
                    </td>

                    <td>
                        @Html.ActionLink("View Details", "Details", new { id = item.OrderID }, new { @class = "btn btn-info" })

                    </td>
                </tr>
            }

        </table>
    </div>

</div>

